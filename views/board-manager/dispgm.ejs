<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Employee Profile | <%= employee.firstName %> <%= employee.lastName %>
    </title>
    <link rel="stylesheet" href="/profile.css" />
  </head>
  <body>
    <a href="/view-gm" class="back-button">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M19 12H5M12 19l-7-7 7-7" />
      </svg>
    </a>
    <div class="container">
      <!-- Back Button -->

      <div class="profile-container">
        <!-- Profile Header -->
        <div class="profile-header">
          <div class="profile-info">
            <div class="profile-image">
              <img src="<%= employee.image %>" />
            </div>
            <div class="profile-details">
              <h1><%= employee.firstname %> <%= employee.lastname %></h1>
              <p class="employee-id">Employee ID: <%= employee.employeeid %></p>
              <div class="quick-stats">
                <div class="stat">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                    <polyline points="9 22 9 12 15 12 15 22" />
                  </svg>
                  <span><%= employee.layoutname %></span>
                </div>
                <div class="stat">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M12 20V10" />
                    <path d="M18 20V4" />
                    <path d="M6 20v-4" />
                  </svg>
                  <span><%= employee.plotssold %> Plots Sold</span>
                </div>
                <div class="stat">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path
                      d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                    />
                  </svg>
                  <span><%= employee.mobile %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Content -->
        <div class="profile-content">
          <div class="info-section">
            <h2 class="h2">Personal Information</h2>
            <div class="info-grid">
              <div class="info-item">
                <label>Age</label>
                <span><%= employee.age %> years</span>
              </div>
              <div class="info-item">
                <label>Gender</label>
                <span><%= employee.gender %></span>
              </div>
            </div>
          </div>

          <!-- disp bms -->

          <!-- Action Buttons -->
          <div class="action-buttons">
            <a href="/edit/<%= employee.id %>?edit=true" class="btn-edit">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"
                />
              </svg>
              Edit Profile
            </a>
            <form action="/delete" method="post">
              <input type="hidden" name="id" value="<%= employee.id %>" />
              <button type="submit" class="btn-delete">Delete</button>
            </form>
            <button class="btn btn-assign">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                <circle cx="9" cy="7" r="4" />
                <line x1="19" y1="8" x2="19" y2="14" />
                <line x1="22" y1="11" x2="16" y2="11" />
              </svg>
              Show Associates
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="main container associates-section"></div>
    <div>
      <% if (employee.associates && employee.associates.length > 0) { %>
      <div>
        <% employee.associates.forEach(function(associate) { %>
        <input
          type="text"
          class="associate"
          value="<%= associate.associate %>"
        />
        <% }); %>
      </div>
      <% } else { %>
      <p>No associates</p>
      <% } %>
    </div>
    <script src="/display.js"></script>
  </body>
</html>
