<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Registration</title>
    <link rel="stylesheet" href="reg-form.css" />
  </head>
  <body>
    <a href="/bm-login-post" class="back-button">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M19 12H5M12 19l-7-7 7-7" />
      </svg>
    </a>
    <div class="container">
      <div class="form-card">
        <!-- Header -->
        <div class="form-header">
          <div class="header-content">
            <div class="icon-container">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                <circle cx="9" cy="7" r="4" />
                <line x1="19" y1="8" x2="19" y2="14" />
                <line x1="16" y1="11" x2="22" y2="11" />
              </svg>
            </div>
            <h1>Employee Registration</h1>
          </div>
          <img src="main.png" class="collimg" alt="" />
        </div>
        <select id="role" onchange="changeForm()">
          <option value="">Select</option>
          <option value="Generalmanager">General-Manager</option>
          <option value="Bussinessassociate">Bussiness-Associate</option>
        </select>
        <!-- Form -->
        <form
          id="registrationForm-gm"
          action="/create-user-gm"
          method="POST"
          style="display: none"
          novalidate
          enctype="multipart/form-data"
        >
          <!-- Name Fields -->
          <div class="form-row">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input
                type="text"
                id="firstName"
                name="firstname"
                placeholder="Enter first name"
                required
              />
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input
                type="text"
                id="lastName"
                name="lastname"
                placeholder="Enter last name"
                required
              />
            </div>
          </div>

          <!-- Contact and Personal Info -->
          <div class="form-row">
            <div class="form-group">
              <label for="mobileNumber">Mobile Number</label>
              <input
                type="tel"
                id="mobileNumber"
                name="mobile"
                placeholder="Enter mobile number"
                required
              />
            </div>
            <div class="form-group">
              <label for="age">Age</label>
              <input
                type="number"
                name="age"
                id="age"
                placeholder="Enter age"
                required
              />
            </div>
            <div class="form-group">
              <label for="gender">Gender</label>
              <select id="gender" name="gender" required>
                <option value="">Select gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
              </select>
            </div>
          </div>

          <!-- Employee Info -->
          <div class="form-row">
            <div class="form-group">
              <label for="employeeId">Employee ID</label>
              <input
                type="text"
                id="employeeId"
                name="employeeid"
                placeholder="Enter employee ID"
                required
              />
            </div>
          </div>

          <!-- Guidance Field -->

          <!-- File Upload -->
          <div class="form-group">
            <label>Upload Documents</label>
            <div class="file-upload">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                <polyline points="17 8 12 3 7 8" />
                <line x1="12" y1="3" x2="12" y2="15" />
              </svg>
              <span>Click or drag files to upload</span>
              <input type="file" name="image" />
            </div>
          </div>

          <!-- Submit Button -->
          <div class="form-submit">
            <button type="submit">Register</button>
          </div>
        </form>
        <form
          id="registrationForm-ba"
          action="/create-user-ba"
          method="POST"
          style="display: none"
          novalidate
          enctype="multipart/form-data"
        >
          <!-- Name Fields -->
          <div class="form-row">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input
                type="text"
                id="firstName"
                name="firstname"
                placeholder="Enter first name"
                required
              />
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input
                type="text"
                id="lastName"
                name="lastname"
                placeholder="Enter last name"
                required
              />
            </div>
          </div>

          <!-- Contact and Personal Info -->
          <div class="form-row">
            <div class="form-group">
              <label for="mobileNumber">Mobile Number</label>
              <input
                type="tel"
                id="mobileNumber"
                name="mobile"
                placeholder="Enter mobile number"
                required
              />
            </div>
            <div class="form-group">
              <label for="age">Age</label>
              <input
                type="number"
                name="age"
                id="age"
                placeholder="Enter age"
                required
              />
            </div>
            <div class="form-group">
              <label for="gender">Gender</label>
              <select id="gender" name="gender" required>
                <option value="">Select gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
              </select>
            </div>
          </div>

          <!-- Employee Info -->
          <div class="form-row">
            <div class="form-group">
              <label for="employeeId">Employee ID</label>
              <input
                type="text"
                id="employeeId"
                name="employeeid"
                placeholder="Enter employee ID"
                required
              />
            </div>
          </div>

          <!-- Guidance Field -->
          <div class="form-row">
            <div class="form-group-new">
              <label for="guidance">Guidance</label>
              <input
                id="guidance"
                type="text"
                name="guidance"
                placeholder="Enter guidance or additional notes"
              />
            </div>
          </div>
          <!-- File Upload -->
          <div class="form-group">
            <label>Upload Documents</label>
            <div class="file-upload">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                <polyline points="17 8 12 3 7 8" />
                <line x1="12" y1="3" x2="12" y2="15" />
              </svg>
              <span>Click or drag files to upload</span>
              <input type="file" name="image" />
            </div>
          </div>

          <!-- Submit Button -->
          <div class="form-submit">
            <button type="submit">Register</button>
          </div>
        </form>
      </div>
    </div>
    <script>
      function changeForm() {
        var role = document.getElementById("role").value;
        if (role === "Generalmanager") {
          document.getElementById("registrationForm-gm").style.display =
            "block";
          document.getElementById("registrationForm-ba").style.display = "none";
        } else if (role === "Bussinessassociate") {
          document.getElementById("registrationForm-ba").style.display =
            "block";
          document.getElementById("registrationForm-gm").style.display = "none";
        } else {
          document.getElementById("registrationForm-ba").style.display = "none";
          document.getElementById("registrationForm-gm").style.display = "none";
        }
      }
      role.addEventListener("change", () => {});
    </script>
  </body>
</html>
