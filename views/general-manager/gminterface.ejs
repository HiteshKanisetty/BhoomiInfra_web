    <div>
      <% if (employee.associates && employee.associates.length > 0) { %>
      <div>
        <% employee.associates.forEach(function(associate) { %>
        <input
          type="hidden"
          class="associate"
          value="<%= associate.associate %>"
        />
        <% }); %>
      </div>
      <% } %>
    </div> -->
    <footer>
      <p>
        &copy; 2025 Bhoomi Infra Reality | Designed and Developed by
        <a href="/">Hitesh Kanisetty</a>
      </p>
    </footer>

    <!-- <script src="/display.js"></script> -->
  </body>
</html>
